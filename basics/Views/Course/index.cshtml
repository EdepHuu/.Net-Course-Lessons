@model Course 

<div class="card mb-3">
    <div class="row">
        <div class="col-md-4">
            <img src="~/img/@Model.Image" class = "img-fluid rounded-start" alt="">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">@Model.Title</h5>
            </div>
        </div>
    </div>
</div>